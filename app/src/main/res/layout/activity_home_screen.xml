<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context="org.texephyr.texephyr2k16.HomeScreen">

    <ImageView
        android:contentDescription="@+id/topBar"
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@drawable/texebar" />

    <RelativeLayout
        android:id="@+id/botBar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:background="#242D2E"
        android:padding="5dip">

        <TextView
            android:id="@+id/botText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maharashtra Institute of Technology, Pune"
            android:textColor="#FEFEFE"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:gravity="center"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/texeGlobeLayout"
        android:layout_width="340dip"
        android:layout_height="210dip"
        android:layout_below="@id/topBar"
        android:padding="5dip"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/texeGlobe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/sponsors"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:layout_below="@id/texeGlobeLayout"
        android:layout_above="@id/botBar"
        android:layout_marginBottom="5dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_marginBottom="5dip">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:background="#242D2E"
                    android:text="Main Menu"
                    android:textColor="#FEFEFE"
                    android:textSize="16dip"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/aboutButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10dip"
                    android:background="@drawable/main_button"
                    android:text="About Texephyr"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/abouticon"
                    android:drawableRight="@drawable/rightarrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#242D2E"/>

                <Button
                    android:id="@+id/eventsButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10dip"
                    android:background="@drawable/main_button"
                    android:text="Events"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/abouticon"
                    android:drawableRight="@drawable/rightarrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#242D2E"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10dip"
                    android:background="@drawable/main_button"
                    android:text="Workshops"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/abouticon"
                    android:drawableRight="@drawable/rightarrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#242D2E"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10dip"
                    android:background="@drawable/main_button"
                    android:text="Sponsors"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/abouticon"
                    android:drawableRight="@drawable/rightarrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#242D2E"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10dip"
                    android:background="@drawable/main_button"
                    android:text="Our Team"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/abouticon"
                    android:drawableRight="@drawable/rightarrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#242D2E"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10dip"
                    android:background="@drawable/main_button"
                    android:text="Developers"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/abouticon"
                    android:drawableRight="@drawable/rightarrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#242D2E"/>

                <Button
                    android:id="@+id/contactButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10dip"
                    android:background="@drawable/main_button"
                    android:text="Contact Us"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/abouticon"
                    android:drawableRight="@drawable/rightarrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:background="#242D2E"/>



            </LinearLayout>



        </LinearLayout>



    </ScrollView>


</RelativeLayout>
